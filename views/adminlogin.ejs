<!DOCTYPE html>
<html>

<head>
 <% include partials/navbar.ejs %>
 <link rel="stylesheet" href="resources/global/css/bootstrap.min.css">
 <script>
 function myFunction() {
  var x = document.getElementById("password");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}
 </script>
</head>
<body>
 <div class="container">
   <div class="jumbotron">
     <h1>Portal For ADMIN</h1>
     <div class="row">
       <div class="col-md-6">
         <form method="POST" action="/admin_login">
           <div class="form-group">
             <label for="uname">Username*</label>
             <input type="Username" class="form-control" name="adminuser" id="adminuser" placeholder="Username">
           </div>
           <div class="form-group">
             <label for="password">Password*</label>
             <input type="password" class="form-control" name="password" id="password" placeholder="Password">
           </div>
           <div class="form-group">
             <input type="checkbox" onclick="myFunction()">Show Password
           </div>

           <button type="submit" class="btn btn-primary btn-lg">Sign to your account</button>
         </form>
       </div>
     </div>
   </div>
 </div>
 <script src="resources/global/js/jquery.js"></script>
 <script src="resources/global/js/bootstrap.min.js"></script>
</body>

</html>
